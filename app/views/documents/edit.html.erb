<form action="<%= database_collection_document_path(@database.name, @collection.name, @document["_id"]) %>" method="put">    
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= text_area_tag :document, ActiveSupport::JSON.encode(@document), :class => "json_editor" %>
  <%= submit_tag "Save", :class => "ui-state-default ui-corner-all" %>
</form>  